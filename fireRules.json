{
  "rules": {
    ".read": "true",
    ".write": "true",
    "contacts": {
      "$contact": {
        "business_number": {
          ".validate": "newData.val() != null && newData.val().length == 9"
        },
        "name": {
          ".validate": "newData.val() != null && newData.isString() && newData.val().length <= 48 && newData.val().length >=1"
        },
        "primary_business": {
          ".validate": "newData.val() != null && newData.isString() && newData.val().matches(/Fisher|Distributor|Processor|Fish Monger/)"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "province": {
          ".validate": "newData.isString() && (newData.val().matches(/AB|BC|MB|NB|NL|NS|NT|NU|ON|PE|QC|SK|YT/) || newData.val().matches(/ /))"
        }
      }
    }
  }
}